<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Bot√≥n Sumar</title>
    
    <style>
      body {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        background-color: #ffffff;
        margin: 0;
      }
      .button {
        padding: 10px 20px;
        font-size: 16px;
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
      }
      .button:hover {
        background-color: #0056b3;
      }
    </style>
  </head>
  
  <body>
    <div>
      <button class="button" onclick="incrementValue()">Sumar</button>
    </div>
  </body>
  
  <script>
    async function incrementValue() {
      const response = await fetch('/incrementar', { method: 'POST' });
      const data = await response.json();
      document.getElementById('valor').textContent = `Valor: ${data.count}`;
    }
  </script>
</html>
